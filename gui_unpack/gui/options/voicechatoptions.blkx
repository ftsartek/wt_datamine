{
  "tdiv": {
    "tdiv": [
      {
        "id": "voice_options_block"
      },
      {
        "width": "pw"
      },
      {
        "pos": "0.5pw-0.5w, 0.5ph-0.5h"
      },
      {
        "max-height": "@bigOptionsHeight"
      },
      {
        "flow": "vertical"
      },
      {
        "optionsBoxRightScroll": {
          "id": "voiceOptions"
        }
      },
      {
        "tdiv": [
          {
            "id": "ptt_buttons_block"
          },
          {
            "width": "pw"
          },
          {
            "flow": "vertical"
          },
          {
            "display": "hide"
          },
          {
            "tdiv": [
              {
                "width": "pw"
              },
              {
                "td": {
                  "cellType": "left",
                  "optiontext": {
                    "text": "#options/ptt_shortcut"
                  },
                  "width": "0.5pw"
                }
              },
              {
                "td": {
                  "Button_text": {
                    "_on_click": "onAssignVoiceButton",
                    "textarea": {
                      "id": "ptt_shortcut",
                      "input-transparent": "yes",
                      "min-width": "@buttonWidth-@buttonTextPadding",
                      "pos": "0, 0.5ph-0.5h",
                      "position": "relative",
                      "text": "",
                      "text-align": "center",
                      "voiceShortcut": "yes"
                    },
                    "tooltip": "#guiHints/ptt_shortcut"
                  },
                  "cellType": "right",
                  "padding-left": "@optPad",
                  "width": "0.5pw"
                }
              }
            ]
          },
          {
            "tdiv": [
              {
                "width": "pw"
              },
              {
                "padding-top": "0.005@sf"
              },
              {
                "td": {
                  "cellType": "left",
                  "width": "0.5pw"
                }
              },
              {
                "td": {
                  "Button_text": {
                    "_on_click": "onClearVoiceButton",
                    "text": "#mainmenu/btnReset",
                    "tooltip": "#guiHints/ptt_shortcut_reset"
                  },
                  "cellType": "right",
                  "padding-left": "@optPad",
                  "width": "0.5pw"
                }
              }
            ]
          }
        ]
      },
      {
        "tdiv": [
          {
            "width": "pw"
          },
          {
            "padding-top": "0.005@sf"
          },
          {
            "td": {
              "cellType": "left",
              "width": "0.5pw"
            }
          },
          {
            "td": {
              "Button_text": {
                "_on_click": "onEchoTestButton",
                "id": "joinEchoButton",
                "text": "#options/joinEcho",
                "tooltip": "#guiHints/joinEcho"
              },
              "cellType": "right",
              "padding-left": "@optPad",
              "width": "0.5pw"
            }
          }
        ]
      }
    ],
    "textarea": {
      "id": "voice_disable_warning",
      "margin": "0, 0.03@scrn_tgt",
      "max-width": "50%pw",
      "overlayTextColor": "warning",
      "pos": "50%pw-50%w, 0",
      "position": "relative",
      "text": "#options/voiceChat/disableWarning"
    },
    "width": "pw"
  }
}