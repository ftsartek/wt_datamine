{
  "id": "options-root",
  "img": {
    "background-image": "#ui/gameuiskin#optionlist_background_down",
    "pos": "-sw,sh-h-1@bh",
    "position": "absolute",
    "size": "3sw - 3sw*@isInVr, sh/3+1"
  },
  "root": {
    "blur": [],
    "blur_foreground": [],
    "menutitle": {
      "id": "msgbox-title"
    },
    "optionlist_container": [
      {
        "pos": "0.5(sw-w), 0.5(sh-h)"
      },
      {
        "position": "absolute"
      },
      {
        "id": "msg_box"
      },
      {
        "padding": "5*@scrn_tgt/100.0"
      },
      {
        "height": "60*@scrn_tgt/100.0"
      },
      {
        "flow": "vertical"
      },
      {
        "textarea": {
          "display": "hide",
          "id": "textHelp",
          "max-height": "ph",
          "overflow-y": "auto",
          "padding": "1*@scrn_tgt/100.0",
          "pos": "50%pw-55%w, 40%ph-40%h",
          "position": "relative",
          "width": "90%pw"
        }
      },
      {
        "tdiv": [
          {
            "width": "@srw"
          },
          {
            "pos": "50%pw-50%w, 1*@scrn_tgt/100.0"
          },
          {
            "position": "absolute"
          },
          {
            "flow": "vertical"
          },
          {
            "ButtonsLine": [
              {
                "id": "line_combo_airBrakes"
              },
              {
                "ButtonImg": {
                  "btnName": "DpadLeft"
                }
              },
              {
                "ButtonImg": {
                  "btnName": "R3"
                }
              },
              {
                "text": {
                  "text": "+"
                }
              },
              {
                "text": {
                  "text": " = "
                }
              },
              {
                "text": {
                  "id": "combo_airBrakes",
                  "text": "#controls/combo_airBrakes"
                }
              }
            ]
          },
          {
            "ButtonsLine": [
              {
                "id": "line_combo_resetTrim"
              },
              {
                "ButtonImg": {
                  "btnName": "DpadRight"
                }
              },
              {
                "ButtonImg": {
                  "btnName": "X"
                }
              },
              {
                "text": {
                  "text": "+"
                }
              },
              {
                "text": {
                  "text": " = "
                }
              },
              {
                "text": {
                  "id": "combo_resetTrim",
                  "text": "#controls/combo_resetTrim_2"
                }
              }
            ]
          }
        ]
      },
      {
        "tdiv": {
          "id": "pictureHelp",
          "img": [
            {
              "id": "stick-help"
            },
            {
              "background-image": "ui/controller"
            },
            {
              "size": "512/720*@scrn_tgt, 256/720*@scrn_tgt"
            },
            {
              "pos": "50%pw-50%w, 50%ph-50%h"
            },
            {
              "position": "absolute"
            },
            {
              "textButtonHint": {
                "id": "start",
                "pos": "0.61pw, 0.085ph-h",
                "position": "absolute",
                "text": "#controls/start"
              }
            },
            {
              "textButtonHint": {
                "id": "cross",
                "min-width": "27%sw",
                "pos": "0.86pw, 0.69ph-3.7*@scrn_tgt/100.0",
                "position": "absolute",
                "style": "behavior:textArea; re-type:textarea;",
                "text": "#controls/cross"
              }
            },
            {
              "textButtonHint": {
                "id": "triangle",
                "pos": "0.84pw, 0.375ph-h",
                "position": "absolute",
                "text": "#controls/triangle"
              }
            },
            {
              "textButtonHint": {
                "id": "R3",
                "pos": "0.74pw, 0.99ph",
                "position": "absolute",
                "text": "#controls/R3"
              }
            },
            {
              "textButtonHint": {
                "id": "R1",
                "pos": "0.84pw, 0.25ph-h",
                "position": "absolute",
                "text": "#controls/R1"
              }
            },
            {
              "textButtonHint": {
                "id": "R2",
                "pos": "0.84pw, 0.16ph-h",
                "position": "absolute",
                "text": "#controls/R2"
              }
            },
            {
              "textButtonHint": {
                "id": "RS",
                "min-width": "30%sw",
                "pos": "0.69pw, 1.0ph-h",
                "position": "absolute",
                "style": "behavior:textArea; re-type:textarea;",
                "text": "#controls/RS"
              }
            },
            {
              "textButtonHint": {
                "id": "select",
                "pos": "0.41pw-w, 0.085ph-h",
                "position": "absolute",
                "text": "#controls/select"
              }
            },
            {
              "textButtonHint": {
                "id": "L1",
                "pos": "0.18pw-w, 0.25ph-h",
                "position": "absolute",
                "text": "#controls/L1"
              }
            },
            {
              "textButtonHint": {
                "id": "L2",
                "pos": "0.18pw-w, 0.16ph-h",
                "position": "absolute",
                "text": "#controls/L2"
              }
            },
            {
              "textButtonHint": {
                "id": "square",
                "pos": "0.84pw, 0.60ph-h",
                "position": "absolute",
                "text": "#controls/square"
              }
            },
            {
              "textButtonHint": {
                "id": "circle",
                "pos": "0.84pw, 0.49ph-h",
                "position": "absolute",
                "text": "#controls/circle"
              }
            },
            {
              "textButtonHint": {
                "id": "L3",
                "pos": "0.15pw-w, 0.40ph",
                "position": "absolute",
                "text": "#controls/L3"
              }
            },
            {
              "textButtonHint": {
                "id": "LS",
                "pos": "0.15pw-w, 0.40ph-h",
                "position": "absolute",
                "text": "#controls/LS"
              }
            },
            {
              "textButtonHint": {
                "id": "dpad_up",
                "pos": "0.15pw-w, 0.63ph-h",
                "position": "absolute",
                "text": "#controls/dpad_up"
              }
            },
            {
              "textButtonHint": {
                "id": "dpad_left",
                "pos": "0.15pw-w, 0.75ph-h",
                "position": "absolute",
                "text": "#controls/dpad_left"
              }
            },
            {
              "textButtonHint": {
                "id": "dpad_right",
                "pos": "0.15pw-w, 0.88ph-h",
                "position": "absolute",
                "text": "#controls/dpad_right"
              }
            },
            {
              "textButtonHint": {
                "id": "dpad_down",
                "pos": "0.32pw-w, 1.0ph-h",
                "position": "absolute",
                "text": "#controls/dpad_down"
              }
            }
          ],
          "max-height": "0.45w",
          "max-width": "(0.6 + 0.4@isWide) * @rw",
          "overflow": "visible",
          "pos": "50%pw-50%w, 50%ph-50%h",
          "position": "absolute",
          "size": "2.0ph, 0.9ph"
        }
      },
      {
        "table": {
          "baseRow": "yes",
          "behavior": "PosOptionsNavigator",
          "class": "optionsTable",
          "pos": "50%pw-50%w, ph-h-1*@scrn_tgt/100.0",
          "position": "absolute",
          "size": "pw",
          "tr": [
            {
              "width": "pw"
            },
            {
              "css-hier-invalidate": "all"
            },
            {
              "td": {
                "cellType": "left",
                "optiontext": {
                  "text": "#difficulty_name"
                },
                "overflow-x": "hidden",
                "width": "50%pw"
              }
            },
            {
              "td": {
                "cellType": "right",
                "padding-left": "@optPad",
                "spinnerListBox": [
                  {
                    "id": "controls_difficulty"
                  },
                  {
                    "size": "pw, ph"
                  },
                  {
                    "on_select": "onControlsDifficulty"
                  },
                  {
                    "option": {
                      "max-width": "p.p.w-5*@scrn_tgt/100.0",
                      "optiontext": {
                        "text": "#difficulty0"
                      },
                      "pare-text": "yes",
                      "selected": "yes"
                    }
                  },
                  {
                    "option": {
                      "max-width": "p.p.w-5*@scrn_tgt/100.0",
                      "optiontext": {
                        "text": "#difficulty1"
                      },
                      "pare-text": "yes"
                    }
                  },
                  {
                    "option": {
                      "max-width": "p.p.w-5*@scrn_tgt/100.0",
                      "optiontext": {
                        "text": "#difficulty2"
                      },
                      "pare-text": "yes"
                    }
                  }
                ],
                "width": "50%pw"
              }
            }
          ]
        }
      }
    ],
    "type": "big"
  }
}